<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="w3-table-all">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= image_tag(product.image_url) %>
        <p><%= product.image_url %></p></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product , class:"w3-button w3-light-gray w3-border" %></td>
        <td><%= link_to 'Edit', edit_product_path(product) , class:"w3-button w3-light-gray w3-border" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-light-gray w3-border"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

